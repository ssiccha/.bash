alias add='git add'
alias pa='git add -p'
alias amend='git commit --amend'
alias cim='git commit -m'
alias log='git log --oneline --max-count=15'
alias gd='git diff'
alias gdw='git diff --color-words'
alias branch='git branch'
alias reset='git reset HEAD'
