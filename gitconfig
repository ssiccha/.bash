# This is Git's per-user configuration file.
[user]
  name = Sergio Siccha
  email = sergio.siccha@gmail.com
[alias]
  st = status
  co = checkout
  ci = commit
  cim = commit -m
  update = pull --ff-only
  restructure = "! git rebase -i HEAD~${1} #"
  continue = rebase --continue
  fixme = grep -n --color=auto --break --ignore-case -e 'FIXME*'
  todo  = grep -n --color=auto --break --ignore-case -e 'TODO*'
[core]
  editor = nvim
[push]
  default = simple
[diff]
  tool = vimdiff
